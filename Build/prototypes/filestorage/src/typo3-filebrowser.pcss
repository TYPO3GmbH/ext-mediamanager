.topbar-wrapper {
    padding-top: 0;
}

.topbar-wrapper typo3-topbar:not(:first-child) {
    display: none;
}

.allowed-extensions typo3-badge {
    --typo3-badge-padding-small: 0 0.25rem;
}

typo3-card[disabled] {
    opacity: 0.2;
    cursor: not-allowed;
}


:host {
    display: flex;
    flex-direction: column;
}

.content {
    height: calc(100vh - 3.5rem);
}
