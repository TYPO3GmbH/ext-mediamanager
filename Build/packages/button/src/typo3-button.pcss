@import '../../../theme/index.pcss';

:host {
  display: inline-flex;
  flex-direction: row;
  vertical-align: top;
}

.button slot[name='icon'] + #label {
  margin-left: var(--typo3-btn-text-icon-gap, var(--btn-text-icon-gap));
}

.button #label + ::slotted([slot='icon']) {
  margin-left: var(--typo3-btn-text-icon-gap, var(--btn-text-icon-gap));
}

.button {
  display: flex;
  flex: 1 1 auto;
  cursor: pointer;
  padding: var(--btn-padding);
  outline: none;
  justify-content: center;
  align-items: center;

  border: var(--typo3-btn-border-width, var(--btn-border-width)) solid transparent;
  font-size: var(--typo3-btn-font-size, var(--btn-font-size));
  line-height: var(--typo3-btn-line-height, var(--btn-line-height));
  border-radius: var(--typo3-btn-border-radius, var(--btn-border-radius));
}

:host([color='default']) .button {
  color: var(--typo3-btn-default-color, var(--btn-default-color));
  background-color: var(--typo3-btn-default-background-color, var(--btn-default-bg));
  border-color: var(--typo3-btn-default-border-color, var(--btn-default-border));
}

:host([color='default']) .button:focus {
  color: var(--typo3-btn-default-color-focus, var(--btn-default-color));
  background-color: var(--typo3-btn-default-background-color-focus, color(var(--btn-default-bg) shade(10%)));
  border-color: var(--typo3-btn-default-border-color-focus, color(var(--btn-default-border) shade(10%)));
}

:host([color='default']) .button:hover {
  color: var(--typo3-btn-default-color-hover, var(--btn-default-color));
  background-color: var(--typo3-btn-default-background-color-hover, color(var(--btn-default-bg) shade(10%)));
  border-color: var(--typo3-btn-default-border-color-hover, color(var(--btn-default-border) shade(12%)));
}

:host([color='default']) .button:active {
  color: var(--typo3-btn-default-color-active, var(--btn-default-color));
  background-color: var(--typo3-btn-default-background-color-active, color(var(--btn-default-bg) shade(10%)));
  border-color: var(--typo3-btn-default-border-color-active, color(var(--btn-default-border) shade(12%)));
}

