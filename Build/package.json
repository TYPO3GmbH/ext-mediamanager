{
  "scripts": {
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "npm run rollup:dev && karma start --coverage",
    "test:watch": "concurrently --kill-others --names rollup,karma \"npm run rollup:dev-watch\" \"karma start --auto-watch=true --single-run=false\"",
    "storybook": "concurrently --kill-others --names rollup,storybook \"npm run rollup:dev-watch\"  \"start-storybook --node-resolve --watch --open\"",
    "storybook:build": "build-storybook",
    "build": "rimraf dist && rollup -c rollup.config.js",
    "start:build": "npm run build && es-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "start": "concurrently --kill-others --names rollup,es-dev-server \"npm run rollup:dev-watch\" \"es-dev-server --app-index index.html --node-resolve --open --watch\"",
    "rollup:dev": "rollup -c rollup.config.dev.js",
    "rollup:dev-watch": "npm run rollup:dev -- --w"
  },
  "devDependencies": {
    "@open-wc/building-rollup": "^1.0.0",
    "@open-wc/demoing-storybook": "^2.0.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@types/node": "13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "concurrently": "^5.1.0",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.5.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "globby": "^11.0.1",
    "husky": "^1.0.0",
    "lint-staged": "^10.0.0",
    "postcss": "^8.1.1",
    "postcss-color-function": "^4.1.0",
    "postcss-css-variables": "^0.17.0",
    "postcss-import": "^12.0.1",
    "prettier": "^2.0.4",
    "rimraf": "^2.6.3",
    "rollup": "^2.3.4",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.1",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-postcss-lit": "^1.0.1",
    "rollup-plugin-tslint": "^0.2.2",
    "rollup-plugin-typescript": "^1.0.1",
    "tslib": "^1.11.0",
    "typescript": "~3.9.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "name": "typo3-filelist",
  "version": "0.0.0",
  "description": "Webcomponent typo3-filelist following open-wc recommendations",
  "author": "typo3-filelist",
  "license": "MIT",
  "dependencies": {
    "@material/mwc-menu": "^0.18.0",
    "@vaadin/vaadin-split-layout": "git+https://github.com/vaadin/vaadin-split-layout.git#next",
    "canvas-datagrid": "^0.24.4",
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0"
  }
}
