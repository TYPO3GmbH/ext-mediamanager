{
    "name": "typo3/cms-mediamanager",
	"type": "typo3-cms-extension",
    "description": "TYPO3 Media Manager",
	"homepage": "https://typo3.org",
    "license": "GPL-3.0-or-later",
	"authors": [
		{
			"name": "TYPO3 CMS Core Team",
			"role": "Developer",
			"homepage": "https://forge.typo3.org/projects/typo3cms-core"
		},
		{
			"name": "The TYPO3 Community",
			"role": "Contributor",
			"homepage": "https://typo3.org/community/"
		}
	],
	"support": {
		"chat": "https://typo3.org/help",
		"docs": "https://docs.typo3.org",
		"issues": "https://forge.typo3.org",
		"source": "https://github.com/TYPO3/TYPO3.CMS"
	},
	"minimum-stability": "dev",
    "require": {
		"php": "^7.2 || ^8.0",
        "typo3/cms-core": "12.*.*@dev",
        "ext-zip": "*",
        "ext-json": "*"
    },
    "require-dev": {
		"typo3/cms-filelist": "12.*.*@dev",
		"phpunit/phpunit": "^9.5.20",
		"typo3/coding-standards": "^0.5.3",
		"phpstan/phpstan": "^1.8.0",
		"phpstan/phpstan-phpunit": "^1.1.1",
		"typo3/testing-framework": "dev-main",
        "roave/security-advisories": "dev-latest",
		"typo3/cms-composer-installers": "^3.0"
	},
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin",
        "allow-plugins": {
            "typo3/class-alias-loader": true,
            "typo3/cms-composer-installers": true
        }
    },
    "autoload": {
        "psr-4": {
            "TYPO3\\CMS\\Mediamanager\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TYPO3\\CMS\\Mediamanager\\Tests\\": "Tests"
        }
    },
    "scripts": {
		"post-autoload-dump": [
			"mkdir -p .Build/Web/typo3conf/ext/",
			"[ -L .Build/Web/typo3conf/ext/mediamanager ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/mediamanager"
		]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web",
            "extension-key": "mediamanager"
        }
    }
}
