:host {
  --typo3-global-font-family-base: Verdana, Arial, Helvetica, sans-serif;
  --typo3-global-font-size-default: 0.75rem;
  --typo3-global-font-weight-medium: 700;

  /* Colors */
  --typo3-global-gray-base: #000;
  --typo3-global-gray-darker: #222;
  --typo3-global-gray-dark: #333;
  --typo3-global-gray: #555;
  --typo3-global-gray-light: #777;
  --typo3-global-gray-lighter: #eee;

  --typo3-global-brand-primary: #0078e6;
  --typo3-global-brand-secondary: #6c757d;
  --typo3-global-brand-success: #79a548;
  --typo3-global-brand-info: #6daae0;
  --typo3-global-brand-warning: #e8a33d;
  --typo3-global-brand-danger: #c83c3c;

  /* Defaults */
  --typo3-global-default-border-radius: 0.125rem;
  --typo3-global-default-border-width: 0.0625rem;
  --typo3-global-animation-duration: 0.5s;
  --typo3-global-default-gap: 0.25rem;

  /* Buttons */
  --typo3-global-btn-default-color: var(--typo3-global-gray-dark);
  --typo3-global-btn-default-bg: var(--typo3-global-gray-lighter);
  --typo3-global-btn-default-border: #bbb;
  --typo3-global-btn-default-bg-hover: #d4d4d4;
  --typo3-global-btn-default-border-hover: #9c9c9c;
  --typo3-global-btn-default-border-active: #9c9c9c;

  --typo3-global-btn-primary-color: #fff;
  --typo3-global-btn-primary-bg: var(--typo3-global-brand-primary);
  --typo3-global-btn-primary-border: #006bcc;
  --typo3-global-btn-primary-bg-hover: #005db3;
  --typo3-global-btn-primary-border-hover: #004b8f;
  --typo3-global-btn-primary-border-active: #004b8f;

  --typo3-global-btn-success-color: #fff;
  --typo3-global-btn-success-bg: var(--typo3-global-brand-success);
  --typo3-global-btn-success-border: #6c9340;
  --typo3-global-btn-success-bg-hover: #5f8139;
  --typo3-global-btn-sucess-border-hover: #4d682d;
  --typo3-global-btn-success-border-active: #8bb759;


  --typo3-global-btn-info-color: #fff;
  --typo3-global-btn-info-bg: var(--typo3-global-brand-info);
  --typo3-global-btn-info-border: #589edc;
  --typo3-global-btn-info-bg-hover: #4391d7;
  --typo3-global-btn-info-border-hover: #2b80cc;
  --typo3-global-btn-info-border-active: #2b80cc;

  --typo3-global-btn-warning-color: #fff;
  --typo3-global-btn-warning-bg: var(--typo3-global-brand-warning);
  --typo3-global-btn-warning-border: #e59826;
  --typo3-global-btn-warning-bg-hover: #d88b1a;
  --typo3-global-btn-warning-border-hover: #b87716;
  --typo3-global-btn-warning-border-active: #b87716;

  --typo3-global-btn-danger-color: #fff;
  --typo3-global-btn-danger-bg: var(--typo3-global-brand-danger);
  --typo3-global-btn-danger-border: #b73434;
  --typo3-global-btn-danger-bg-hover: #a32e2e;
  --typo3-global-btn-danger-border-hover: #872626;
  --typo3-global-btn-danger-border-active: #872626;

  --typo3-global-btn-secondary-color: #fff;
  --typo3-global-btn-secondary-bg: var(--typo3-global-brand-secondary);
  --typo3-global-btn-secondary-border: var(--typo3-global-brand-secondary);
  --typo3-global-btn-secondary-bg-hover: #545b62;
  --typo3-global-btn-secondary-border-hover: #50565c;
  --typo3-global-btn-secondary-border-active: #50565c;

  --typo3-global-btn-border-radius: var(--typo3-global-default-border-radius);
  --typo3-global-btn-font-size: var(--typo3-global-font-size-default);
  --typo3-global-btn-line-height: 1.4;
  --typo3-global-btn-padding: 0.375rem;
  --typo3-global-btn-border-width: var(--typo3-global-default-border-width);
  --typo3-global-btn-icon-size: 1rem;
  --typo3-global-btn-disabled-opacity: 0.65;

  /* Badges */
  --typo3-global-badge-padding: 0.25em 0.4em;
  --typo3-global-badge-font-weight: 500;
  --typo3-global-badge-border-radius: 50%;
  --typo3-global-badge-size: 1.375rem;
  --typo3-global-badge-font-size: var(--typo3-global-font-size-default);

  --typo3-global-badge-default-color: var(--typo3-global-btn-default-color);
  --typo3-global-badge-default-bg: var(--typo3-global-btn-default-bg);

  --typo3-global-badge-primary-color: var(--typo3-global-btn-primary-color);
  --typo3-global-badge-primary-bg: var(--typo3-global-btn-primary-bg);

  --typo3-global-badge-success-color: var(--typo3-global-btn-success-color);
  --typo3-global-badge-success-bg: var(--typo3-global-btn-success-bg);

  --typo3-global-badge-info-color: var(--typo3-global-btn-info-color);
  --typo3-global-badge-info-bg: var(--typo3-global-btn-info-bg);

  --typo3-global-badge-warning-color: var(--typo3-global-btn-warning-color);
  --typo3-global-badge-warning-bg: var(--typo3-global-btn-warning-bg);

  --typo3-global-badge-danger-color: var(--typo3-global-btn-danger-color);
  --typo3-global-badge-danger-bg: var(--typo3-global-btn-danger-bg);


  /* SplitPane */
  --typo3-global-splitpane-splitter-bg: var(--typo3-global-gray-lighter);
  --typo3-global-splitpane-splitter-size: var(--typo3-global-default-border-width);
  --typo3-global-splitpane-handle-width: 0.125rem;
  --typo3-global-splitpane-handle-height: 1.5rem;


  /* Tooltip */
  --typo3-global-tooltip-font-size: var(--typo3-global-font-size-default);
  --typo3-global-tooltip-line-height: 1;
  --typo3-global-tooltip-bg: var(--typo3-global-gray-dark);
  --typo3-global-tooltip-color: #fff;
  --typo3-global-tooltip-padding: 0.5rem;
  --typo3-global-tooltip-border-radius: var(--typo3-global-default-border-radius);
  --typo3-global-tooltip-max-width: 15rem;
  --typo3-global-tooltip-transition: opacity var(--typo3-global-animation-duration) ease-in-out;

  /* Alerts */
  --typo3-global-alert-border-radius: var(--typo3-global-default-border-radius);
  --typo3-global-alert-border-width: var(--typo3-global-default-border-width);

  --typo3-global-alert-success-color: #3c763d;
  --typo3-global-alert-success-bg: #dff0d8;
  --typo3-global-alert-success-border: transparent;

  --typo3-global-alert-info-color: #31708f;
  --typo3-global-alert-info-bg: #d9edf7;
  --typo3-global-alert-info-border: transparent;

  --typo3-global-alert-warning-color: #8a6d3b;
  --typo3-global-alert-warning-bg: #fcf8e3;
  --typo3-global-alert-warning-border: transparent;

  --typo3-global-alert-danger-color: #a94442;
  --typo3-global-alert-danger-bg: #f2dede;
  --typo3-global-alert-danger-border: transparent;

  --typo3-global-alert-close-btn-font-size: 1.3125rem;
  --typo3-global-alert-close-btn-font-weight: var(--typo3-global-font-weight-medium);
  --typo3-global-alert-close-btn-line-height: 0.75;
  --typo3-global-alert-close-btn-color: #000;
  --typo3-global-alert-close-btn-opacity: 0.5;

  /* Modals */

  --typo3-global-modal-bg: #fff;
  --typo3-global-modal-font-size: var(--typo3-global-font-size-default);
  --typo3-global-modal-padding: 1rem;

  --typo3-global-modal-border-color: rgba(0,0,0, .2);
  --typo3-global-modal-border-width: var(--typo3-global-default-border-width);
  --typo3-global-modal-border-radius: var(--typo3-global-default-border-radius);

  --typo3-global-modal-close-btn-font-size: 1rem;
  --typo3-global-modal-close-btn-font-weight: var(--typo3-global-font-weight-medium);
  --typo3-global-modal-close-btn-line-height: 1.2rem;
  --typo3-global-modal-close-btn-color: #000;
  --typo3-global-modal-close-btn-opacity: 0.5;

  /* Menu */
  --typo3-global-list-item-icon-size: var(--typo3-global-btn-icon-size);
  --typo3-global-list-item-padding-x: 1rem;
  --typo3-global-list-item-padding-y: 0.25rem;
  --typo3-global-list-item-icon-gap: var(--typo3-global-default-gap);

  --typo3-global-list-item-color: rgba(0, 0, 0, 0.87);

  --typo3-global-list-item-bg-hover: #f8f9fa;
  --typo3-global-list-item-color-hover: #16181b;

  /* Datagrid */
  --typo3-global-datagrid-border-color: var(--typo3-global-gray-lighter);
  --typo3-global-datagrid-cell-color: var(--typo3-global-gray-dark);
  --typo3-global-datagrid-order-arrow-color: var(--typo3-global-gray);
  --typo3-global-datagrid-font: 12px Verdana;
  --typo3-global-datagrid-cell-height: 30;
  --typo3-global-datagrid-cell-border-width: 1;

  /* Breadcrumb */
  --typo3-global-breadcrumb-item-color: var(--typo3-global-brand-secondary);
  --typo3-global-breadcrumb-item-color-active: rgba(0, 0, 0, 0.87);
}
