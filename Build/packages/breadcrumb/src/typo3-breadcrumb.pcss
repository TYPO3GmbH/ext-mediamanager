.breadcrumb {
  display: flex;
  flex-wrap: nowrap;
  padding: var(--typo3-breadcrumb-padding-y, .75rem) var(--typo3-breadcrumb-padding-y, 1rem);
  background-color: var(--typo3-breadcrumb-background-color, var(--typo3-global-gray-lighter));
  border-radius: var(--typo3-breadcrumb-border-radius, var(--typo3-global-default-border-radius));
  white-space: nowrap;
}

::slotted(:not(:last-child)):after {
  display: inline-block;
  padding-right: var(--typo3-breadcrumb-separator-gap, var(--typo3-global-btn-text-icon-gap));
  padding-left: var(--typo3-breadcrumb-separator-gap, var(--typo3-global-btn-text-icon-gap));
  color: var(--typo3-breadcrumb-item-color, var(--typo3-global-breadcrumb-item-color));
  content: var(--typo3-breadcrumb-separator-content, "/");
}

